<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/coral_pink"
    android:gravity="center_horizontal"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/search_view_bg"
                android:backgroundTint="@color/ocean_blue"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/pop_image"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/pop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pop_image"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="BOB:"
                    android:textColor="@color/sandy_brown"
                    android:textSize="26dp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/pop_cardViewText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pop_name"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="20dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pop_name"
                        android:background="@color/jellyfish_purple"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/pop_longtxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Hellowdasdsadasdasdsdasadsdasadsadsasadsads"
                            android:textColor="@color/sandy_brown"
                            android:textSize="20dp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </ScrollView>

        <Button
            android:id="@+id/pop_backBtn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="X"
            android:textSize="20dp"
            android:layout_margin="10dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>